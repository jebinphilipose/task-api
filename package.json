{
  "name": "task-api",
  "version": "1.0.0",
  "description": "A Node.js RESTful API for managing tasks and getting metrics",
  "main": "index.js",
  "scripts": {
    "test": "jest -i --verbose --coverage",
    "dev": "nodemon ./src/server.js",
    "husky:install": "husky install",
    "lint": "eslint './**/*.js' --fix",
    "docker:test:build": "docker-compose -f docker-compose.test.yml build --no-cache",
    "docker:test:run": "docker-compose -f docker-compose.test.yml run --rm server ./scripts/wait-for-it.sh database:5432 -- npx prisma migrate reset --skip-seed -f && npx prisma migrate deploy && npm run test",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml build --no-cache",
    "docker:dev:migrate": "docker-compose -f docker-compose.dev.yml run --rm server ./scripts/wait-for-it.sh database:5432 -- npx prisma migrate dev",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Jebin Philipose",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validation": "^4.1.0",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prisma": "^5.3.1",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
